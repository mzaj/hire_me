<div class="pager">
  <ul>
    <% (1..20).each do |num| %>
      <li class="<%= num < 10 ? 'digit' : '' %> <%= num % 4 == 0 ? '' : 'answered' %>" >
        <%= num %>
      </li>
    <% end %>
  </ul>
</div>


<div class="step">
  <h2 class="question">
    <%= @current_question.text %>
  </h2>

  <ul class="answers">

    <% @current_question.answers.each do |answer| %>
      <li data-value="<%= answer['id'] %>" class="answer">
        <%= answer['text'] %>
      </li>
    <% end %>

    <li class="answer inactive code">
      Inactive button
    </li>

  </ul>

  <div class="buttons clearfix">
    <a href="#" class="button prev">← Prev</a>
    <a href="#" class="button next">Next →</a>
    <a href="#" class="button finish">Finish</a>
  </div>

</div>
